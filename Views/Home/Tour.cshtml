@model IEnumerable<GoWithMe.Areas.Admin.Models.Tour>
@{
    ViewBag.Title = "Tour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tour</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="@Url.Content("~/Content/Image/Places/" + item.Image)" alt="..." style="width:100%; height:300px;" />
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                    <p class="btn btn-default">@Html.ActionLink("Xem Tour", "TourDetail", new { id = item.ID })</p>
                </div>
            </div>
        </div>
    }
</div>

