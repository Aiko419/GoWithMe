@model  GoWithMe.Areas.Admin.Models.Tour
@using GoWithMe.Models
@{
    ViewBag.Title = "Product_Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Ajax Process-->
@{
    if (Session["ShoppingCart"] != null)
    {
        int cartcount = 0;
        List<CartItem> ls = (List<CartItem>)Session["ShoppingCart"];
        foreach (CartItem item in ls)
        {
            cartcount += item.Quality;
        }
        ViewBag.count = cartcount;
    }
}

<script>
    function AddToCart(TourId) {
        $.ajax({
            type: 'POST', url: '/Home/AddToCart', data: { id: TourId }, success: function (data) {
                $("#Cart_Amount").html(data.ItemAmount);
            }
        });
    }
</script>
<!--End Ajax Process-->


<div class="container">
    <h2>@Html.DisplayFor(modelItem => Model.Name)</h2>
    <p>@Html.DisplayFor(modelItem => Model.Discription)</p>
    <p>The .caption class adds proper padding and a dark grey color to text inside thumbnails.</p>
    <p>Click on the images to enlarge them.</p>
    <p>Click on the images to enlarge them.</p>
    <div class="row">
        <div class="col-md-6">
            <div class="thumbnail">
                <a href="/w3images/lights.jpg" target="_blank">
                    <img src="@Url.Content("~/Content/Image/Tours/" + Model.Image)" alt="Lights" style="width:100%" height="350" width="400">
                    <div class="caption">
                        <p>Lorem ipsum donec id elit non mi porta gravida at eget metus.</p>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-inline">
                <h5>Giá cho người lớn:</h5> <h3>$20</h3>
                <div class="form-group">
                    <label>Số khách người lớn</label>
                    <input type="number" class="form-control" id="email">
                </div>
                <h5>Giá cho trẻ em:</h5> <h3>$20</h3>
                <div class="form-group">
                    <label>Số khách trẻ em</label>
                    <input type="number" class="form-control" id="pwd">
                </div>
                <br /><br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" onclick="AddToCart('@Model.ID')" />
                </div>
            </div>

        </div>
    </div>
</div>
