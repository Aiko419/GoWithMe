@model GoWithMe.Areas.Admin.Models.Place

@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Bài Viết</h2>
    <div class="row">
        @foreach (var item in Model.News)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    <a href="/w3images/lights.jpg" target="_blank">
                        <img src="@Url.Content("~/Content/Image/News/" + item.Image)" style="width:100%; height:350px;">
                        <div class="caption">
                            <p>@Html.DisplayFor(modelItem => item.Name)</p>
                        </div>
                    </a>
                </div>
            </div>

        }
    </div>
</div>


